# GPU Worker Environment Variables

# HuggingFace Authentication (REQUIRED - SAM3 is gated)
HF_TOKEN=your_huggingface_token_here

# Cloudflare R2 Configuration (REQUIRED)
R2_ACCOUNT_ID=your_r2_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET_NAME=s3-storage

# Workers API Integration (REQUIRED)
WORKERS_API_URL=https://api.s3app.workers.dev
GPU_CALLBACK_SECRET=your_shared_callback_secret

# Model & Processing Configuration (OPTIONAL - have defaults)
MODEL_CACHE_DIR=/models
BATCH_CONCURRENCY=4
CALLBACK_TIMEOUT_SEC=30

# Runtime Configuration (OPTIONAL)
ADAPTER=runpod
LOG_LEVEL=INFO
